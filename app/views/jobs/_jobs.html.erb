<table class="table table-hover">
  <thead>
    <tr>
      <th>Job</th>
      <th>Category</th>
      <th>Company</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td>
        <% if job.category %>
          <%= job.category.name %>
        <% else %>
          null
        <% end %>
        </td>
        <td><%= job.company %></td>
        <td><%= job.address %></td>
        <td><%= job.phone %></td>
        <td><%= job.description %></td>

        <td><%= link_to 'Show', job, class: 'btn btn-default'  %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Do you want delete this job?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
