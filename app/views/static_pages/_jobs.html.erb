<table class="table table-hover">
  <thead>
  <tr>
    <th>Job</th>
    <th>Category</th>
    <th>Company</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Description</th>
    <th colspan="5"></th>
  </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
      <tr>
        <td>
          <% unless current_user %>
           <%= job.name %>
              <% else %>
          <%= link_to job.name, static_page_path(job) %>
              <% end %>
        </td>
        <td>
          <% if job.category %>
            <%= job.category.name %>
          <% end %>
        </td>
        <td><%= job.company %></td>
        <td><%= job.address %></td>
        <td><%= job.phone %></td>
        <td><%= job.description %></td>
      </tr>
  <% end %>
  </tbody>
</table>
